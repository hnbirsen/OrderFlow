{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "ApiLayer" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "OrderFlow-Api"
    }
  },
  "ConnectionStrings": {
    "SqlServer": "Server=.;Database=OrderFlowDb;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "JwtSettings": {
    "SecretKey": "6>~~Y$dWq.`s,S1{B+8>iOAx^6R+{U<Z",
    "Issuer": "OrderFlowAPI",
    "Audience": "OrderFlowClient",
    "TokenExpirationMinutes": 60
  }
}
