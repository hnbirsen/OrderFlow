@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LoginLayout";
}
<div class="login-surface d-flex justify-content-center align-items-center vh-100">
    <div class="login-card p-4">
        <div class="login-brand mb-3">
            <div class="brand-mark">O</div>
            <div class="brand-name">OrderFlow</div>
        </div>
        <h3 class="login-title text-center mb-3">Reset your password</h3>
        <p class="subtle">Enter your email and we'll send you a code.</p>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input class="form-control" type="email" name="email" required placeholder="you@example.com" />
            </div>
            <button type="submit" class="btn btn-login w-100">Send code</button>
        </form>
        @if (ViewBag.Info != null) { <div class="alert alert-info mt-3">@ViewBag.Info</div> }
        <div class="mt-3 text-center">
            <a class="login-link" href="/login">Back to login</a>
        </div>
    </div>
    </div>

