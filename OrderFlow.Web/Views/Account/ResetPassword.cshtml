@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LoginLayout";
}
<div class="login-surface d-flex justify-content-center align-items-center vh-100">
    <div class="login-card p-4">
        <div class="login-brand mb-3">
            <div class="brand-mark">O</div>
            <div class="brand-name">OrderFlow</div>
        </div>
        <h3 class="login-title text-center mb-3">Set a new password</h3>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Code</label>
                <input class="form-control" name="code" value="@ViewBag.Code" placeholder="Enter the code" />
            </div>
            <div class="mb-3">
                <label class="form-label">New password</label>
                <input class="form-control" name="password" type="password" placeholder="Choose a strong password" />
            </div>
            <button type="submit" class="btn btn-login w-100">Reset Password</button>
        </form>
        <div class="mt-3 text-center">
            <a class="login-link" href="/login">Back to login</a>
        </div>
    </div>
    </div>

