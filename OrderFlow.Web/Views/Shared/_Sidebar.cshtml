<aside class="sidebar" id="sidebar">
	<div class="sidebar-header">
		<div class="brand">
			<div class="brand-mark">O</div>
			<div class="brand-name">OrderFlow</div>
		</div>
		<button class="sidebar-toggle" type="button" id="sidebarToggle" aria-label="Toggle sidebar">
			<span class="toggle-icon"><i class="bi bi-arrows-collapse-vertical"></i></span>
		</button>
	</div>

	<nav class="nav">
		<a asp-controller="Home" asp-action="Index" active-class="nav-item--active" class="nav-item" title="Dashboard">
			<span class="nav-ico" aria-hidden="true"><i class="bi bi-house"></i></span>
			<span class="nav-text">Dashboard</span>
		</a>
		<a asp-controller="Orders" asp-action="List" active-class="nav-item--active" class="nav-item" title="Orders">
			<span class="nav-ico" aria-hidden="true"><i class="bi bi-bag-check-fill"></i></span>
			<span class="nav-text">Orders</span>
		</a>
		<a asp-controller="Orders" asp-action="Create" active-class="nav-item--active" class="nav-item" title="Create Order">
			<span class="nav-ico" aria-hidden="true"><i class="bi bi-cart4"></i></span>
			<span class="nav-text">Create Order</span>
		</a>
		<a asp-controller="Orders" asp-action="Track" active-class="nav-item--active" class="nav-item" title="Track Order">
			<span class="nav-ico" aria-hidden="true"><i class="bi bi-box-seam"></i></span>
			<span class="nav-text">Track Order</span>
		</a>
		<a asp-controller="Orders" asp-action="MyDeliveries" active-class="nav-item--active" class="nav-item" title="My Deliveries">
			<span class="nav-ico" aria-hidden="true"><i class="bi bi-truck"></i></span>
			<span class="nav-text">My Deliveries</span>
		</a>
	</nav>
	<form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
		@* <button type="submit" class="btn btn-link">Logout</button> *@
		<button type="submit" class="logout" title="Log out">
			<span class="nav-ico" aria-hidden="true"><i class="bi bi-box-arrow-left"></i></span>
			<span class="nav-text">Log out</span>
		</button>
	</form>
